#doubansay #shuo-widget {
	color: #505050;
	margin-bottom: 35px;
}

#doubansay #shuo-widget ul li{
	color: #505050;
	display: list-item;
}

#doubansay #shuo-widget ul {
	list-style-type: none;
	list-style: none;
	margin: 0;
	padding: 0;
}

#doubansay #shuo-widget .body .item .text, #doubansay #shuo-widget .body .item .attachment, #shuo-widget .body .item .ft {
	font-size: 12px;
	word-wrap: break-word;
}

#doubansay #shuo-widget .body .item .ft a {
	color: #BBB;
}

#doubansay #shuo-widget .body .item {
	padding: 5px 0;
	border-bottom: 1px solid #F0F0F0;
}
